{
  "name": "slask-finder-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "deploy": "scp -r dist/* dev:/srv/shared/slask-finder-web",
    "deploy-all": "npm run build && npm run deploy",
    "deploy-pwa": "npm run build && ./deploy-local.sh",
    "lint": "biome check --fix",
    "lint-fix": "eslint . --ext ts,tsx,js,jsx --fix && prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint-staged": "lint-staged",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "firebase": "^12.3.0",
    "framer-motion": "^12.9.2",
    "fuzzysort": "^3.1.0",
    "jotai": "^2.12.3",
    "lucide-react": "^0.503.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-range-slider-input": "^3.2.1",
    "react-router-dom": "^7.5.1",
    "swr": "^2.3.3",
    "tailwind-scrollbar": "^4.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.47",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-bundle-analyzer": "^0.19.0",
    "vite-plugin-pwa": "^1.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --fix"
    ],
    "*.{js,jsx}": [
      "biome check --fix"
    ]
  }
}
